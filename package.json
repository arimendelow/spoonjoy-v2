{
  "name": "spoonjoy-v2",
  "version": "1.0.0",
  "description": "Spoonjoy recipe management platform rebuilt with React Router v7 on Cloudflare",
  "type": "module",
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "react-router dev",
    "build": "react-router build",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "db:seed": "npx tsx prisma/seed.ts",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "chromatic --exit-zero-on-changes",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:storybook": "test-storybook",
    "db:migrate:local:option2": "wrangler d1 execute spoonjoy --local --file=./migrations/0003_shopping_list_item_option2.sql",
    "db:migrate:local:option2:idempotent": "node ./scripts/migrate-option2-local-idempotent.mjs",
    "dev:sync": "npm run prisma:generate && npm run db:migrate:local:option2:idempotent && npm run dev",
    "dev:refresh": "rm -rf node_modules/.prisma && npm run prisma:generate"
  },
  "keywords": [
    "recipes",
    "cooking",
    "react-router",
    "cloudflare"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.22.1",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@posthog/react": "^1.7.0",
    "@prisma/adapter-d1": "^6.19.2",
    "@prisma/client": "6.19.2",
    "@react-router/cloudflare": "^7.13.0",
    "@react-router/dev": "^7.13.0",
    "@react-router/node": "^7.13.0",
    "arctic": "^3.7.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "fraction.js": "^5.3.4",
    "framer-motion": "^12.29.2",
    "isbot": "^5.1.33",
    "lucide-react": "^0.563.0",
    "motion": "^12.29.2",
    "openai": "^6.17.0",
    "posthog-js": "^1.336.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.13.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^5.0.0",
    "@cloudflare/workers-types": "^4.20260124.0",
    "@faker-js/faker": "^10.2.0",
    "@playwright/test": "^1.58.1",
    "@storybook/addon-a11y": "^10.2.1",
    "@storybook/addon-docs": "^10.2.1",
    "@storybook/addon-onboarding": "^10.2.1",
    "@storybook/addon-themes": "^10.2.1",
    "@storybook/addon-vitest": "^10.2.1",
    "@storybook/react-vite": "^10.2.1",
    "@storybook/test-runner": "^0.24.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "chromatic": "^11.28.0",
    "happy-dom": "^20.3.7",
    "jsdom-testing-mocks": "^1.16.0",
    "postcss": "^8.5.6",
    "prisma": "6.19.2",
    "storybook": "^10.2.1",
    "tailwindcss": "^4.1.18",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
